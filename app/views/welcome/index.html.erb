<h1>Welcome to FieldPlay</h1>

<p>FieldPlay is a prototype technology platform for recording observations and making identifications.</p>

<% if flash[:notice] %>
  <div class="notice"><%= flash[:notice] %></div>
<% end %>

<% if @current_user %>
<p>You are logged in as <%= @current_user.username %></p>
<% else %>
  <h2>Log In</h2>
  <%= form_tag "/users/login" do %>
    <p>
      <%= label_tag :name %><br>
      <%= text_field_tag :username %>
    </p>

    <p>
      <%= label_tag :password %><br>
      <%= password_field_tag :password %>
    </p>

    <p>
      <%= submit_tag("Log In") %>
    </p>
  <% end %>

  <p><a href="/users/register">Register</a></p>
<% end %>
